                    android:inputType="number|numberDecimal"
                    android:ems="5"
                    android:layout_weight="1"
                    android:id="@+id/muslofron"
                    android:hint="@string/S0"
                    android:gravity="center" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="@string/pantorrilla"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/textView15" />
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="number|numberDecimal"
                    android:ems="5"
                    android:layout_weight="1"
                    android:id="@+id/pantorrilla"
                    android:hint="@string/S0"
                    android:gravity="center" />
                <TextView
                    android:text="@string/humeral"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/textView16" />
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="number|numberDecimal"
                    android:ems="5"
                    android:layout_weight="1"
                    android:id="@+id/humeral"
                    android:hint="@string/S0"
                    android:gravity="center" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="@string/femoral"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/textView17" />
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="number|numberDecimal"
                    android:ems="5"
                    android:layout_weight="1"
                    android:id="@+id/femoral"
                    android:hint="@string/S0"
                    android:gravity="center" />

                <TextView
                    android:text="@string/dm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/textView18" />
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="number|numberDecimal"
                    android:ems="5"
                    android:layout_weight="1"
                    android:id="@+id/dm"
                    android:hint="@string/S0"
                    android:gravity="center" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:text="Hombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/rbHombre"
            android:checked="true" />

        <RadioButton
            android:text="Mujer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/rbMujer" />
    </RadioGroup>
    <Button
        android:text="Calcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/calcular" />
    <Button
        android:text="Limpiar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/limpiar" />

</LinearLayout>
